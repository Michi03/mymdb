{
    "manifest_version": 2,
    "name": "mymdb",
    "version": "1.7.0",
    "description": "When checking the IMDB page of a specific movie, this Add-On adds links to movies you previously rated on IMDB by the same director to the page.",
    "homepage_url": "https://github.com/Michi03/mymdb",
    "icons": {
	"48": "icon.png"
    },
    "content_scripts":[
        {
            "matches": ["https://www.imdb.com/title/*"],
            "js": ["mymdb.js"]
        },
        {
            "matches": ["https://www.imdb.com/user/*/ratings*"],
            "js": ["export.js"]
        },
        {
            "matches": ["https://www.imdb.com/mymdb"],
            "js": ["userPage.js"]
        },
	{
            "matches": ["https://www.imdb.com/*"],
            "js": ["mainPage.js"]
        }
    ],
    "permissions": [
      "https://www.imdb.com/title/*",
      "https://www.imdb.com/user/*",
      "https://www.imdb.com/mymdb",
      "storage"
    ],
    "applications": {
      "gecko": {
        "id": "mymdb@Michi03.com"
      }
    },
    "options_ui": {
      "page": "ratings.html"
    }
}
