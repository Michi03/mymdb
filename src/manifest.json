{
    "manifest_version": 2,
    "name": "mymdb",
    "version": "1.1",
    "description": "If it's sweet I'll lick it for an hour and even if it's sour I might lick it in the shower",
    "homepage_url": "https://github.com/Michi03/mymdb",
    "content_scripts":[
        {
            "matches": ["https://*.imdb.com/title/*"],
            "js": ["mymdb.js"]
        }
    ],
    "web_accessible_resources": [
        "data/*"
    ],
    "permissions": [
      "https://www.omdbapi.com/*",
      "webRequest"
    ],
    "applications": {
      "gecko": {
        "id": "mymdb1.1@Michi03.com"
      }
    }
}
